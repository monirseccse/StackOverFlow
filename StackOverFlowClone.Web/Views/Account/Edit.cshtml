@model AccountEditModel
@{
    ViewData["Title"] = "Edit Account Information";
}

<div class="register-box">
    <div class="register-logo">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="theme-gradient-color"><b>DEV TRACK</b></a>
    </div>
    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg mb-15" style="font-size:xx-large">
                @ViewData["Title"]
            </p>
            <form id="registerForm" asp-area="" asp-controller="Account" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Image" />
                <div class="form-group">
                    <label>Name</label>
                    <div class="input-group mb-3">
                        <input asp-for="Name" type="text" class="form-control" autocomplete="name" placeholder="Full Name" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Image</label>
                    <div class="input-group mb-3">
                        <input asp-for="ImageFile" type="file" class="form-control" aria-required="true" placeholder="Image" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-image"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="row mt-30">
                    <div class="col-4">
                        <a class="btn btn-secondary btn-block" asp-area="App" asp-controller="Project" asp-action="Index" style="padding: 10px 10px">Cancel</a>
                    </div>
                    <div class="col-4 float-right">
                        <button id="Updatebtn" type="submit" class="btn btn-primary btn-block StackOverFlowClone-btn">Update</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#Updatebtn').click(function () {
            alert("Successfully Updated!");
            return true;
        })
    </script>
}